<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/record_category_list_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/record_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".views.fragments.RecordFragment"
            tools:listitem="@layout/fragment_record_category" >
        </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/record_category_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/fab_background"
        android:layout_gravity="bottom|end"
        android:tint="@color/fab_text"
        app:fabSize="normal"/>

</android.support.design.widget.CoordinatorLayout>
